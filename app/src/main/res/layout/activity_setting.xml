<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/primary_color"
    android:orientation="vertical"
    android:padding="16dp"
    android:scrollbars="none"
    tools:context=".view.Setting">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/btn_setting_screen_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/icon_back"
            android:clickable="true"/>

        <TextView
            android:layout_marginTop="32dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:fontFamily="@font/montserrat_bold"
            android:textSize="24sp"
            android:text="Settings"
            android:textColor="@color/white"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="16dp"
            android:orientation="vertical">

            <!--Profile Button-->
            <LinearLayout
                android:id="@+id/_btn_setting_screen_profile"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_marginBottom="4dp"
                android:layout_marginTop="4dp"
                android:clickable="true"
                android:background="@drawable/bg_button_ripple_effect">

                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="5"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/montserrat"
                    android:textColor="@color/black"
                    android:textSize="16sp"
                    android:layout_marginStart="32dp"
                    android:text="Profile"
                    android:padding="16dp"/>

                <ImageView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layoutDirection="rtl"
                    android:layout_height="wrap_content"
                    android:src="@drawable/icon_back"/>

            </LinearLayout>

            <!--Change Password-->
            <LinearLayout
                android:id="@+id/_btn_setting_screen_change_password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_marginBottom="4dp"
                android:layout_marginTop="4dp"
                android:clickable="true"
                android:background="@drawable/bg_button_ripple_effect">

                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="5"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/montserrat"
                    android:textColor="@color/black"
                    android:textSize="16sp"
                    android:layout_marginStart="32dp"
                    android:text="Change Password"
                    android:padding="16dp"/>

                <ImageView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layoutDirection="rtl"
                    android:layout_height="wrap_content"
                    android:src="@drawable/icon_back"/>

            </LinearLayout>

            <!--Logout-->
            <LinearLayout
                android:id="@+id/_btn_setting_screen_logout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_marginBottom="4dp"
                android:layout_marginTop="4dp"
                android:clickable="true"
                android:background="@drawable/bg_button_ripple_effect">

                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="5"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/montserrat"
                    android:textColor="@color/black"
                    android:textSize="16sp"
                    android:layout_marginStart="32dp"
                    android:text="Logout"
                    android:padding="16dp"/>

                <ImageView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layoutDirection="rtl"
                    android:layout_height="wrap_content"
                    android:src="@drawable/icon_back"/>

            </LinearLayout>

            <!--Delete Account-->
            <LinearLayout
                android:id="@+id/_btn_setting_screen_delete_account"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_marginBottom="4dp"
                android:layout_marginTop="4dp"
                android:background="@drawable/bg_text_view_warn">

                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="5"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/montserrat"
                    android:textColor="@color/white"
                    android:textSize="16sp"
                    android:layout_marginStart="32dp"
                    android:text="Delete Your Account"
                    android:clickable="true"
                    android:padding="16dp"/>

                <ImageView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layoutDirection="rtl"
                    android:layout_height="wrap_content"
                    android:src="@drawable/icon_back"
                    android:clickable="true"/>

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</ScrollView>