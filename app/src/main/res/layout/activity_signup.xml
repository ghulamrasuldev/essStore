<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/primary_color"
    android:orientation="vertical"
    android:padding="16dp"
    android:scrollbars="none"
    tools:context=".view.WelcomeScreen">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/_btn_profile_screen_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/icon_back"
            android:clickable="true"/>

        <TextView
            android:layout_marginTop="32dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:fontFamily="@font/montserrat_bold"
            android:textSize="24sp"
            android:text="Create a new account"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="16dp"
            android:orientation="vertical">

            <!--Name-->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Name"
                android:textSize="16sp"
                android:fontFamily="@font/montserrat_bold"
                android:textColor="@color/white"/>

            <EditText
                android:id="@+id/_et_profile_screen_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Your Name Here"
                android:gravity="center"
                android:layout_marginTop="4dp"
                android:fontFamily="@font/montserrat"
                android:layout_marginBottom="4dp"
                android:padding="16dp"
                android:background="@drawable/bg_edit_text"/>

            <!--User Name-->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="User Name"
                android:textSize="16sp"
                android:fontFamily="@font/montserrat_bold"
                android:textColor="@color/white"/>

            <EditText
                android:id="@+id/_et_profile_screen_user_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Your User Name Here"
                android:gravity="center"
                android:layout_marginTop="4dp"
                android:fontFamily="@font/montserrat"
                android:layout_marginBottom="4dp"
                android:padding="16dp"
                android:background="@drawable/bg_edit_text"/>

            <!--Email-->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Email"
                android:textSize="16sp"
                android:fontFamily="@font/montserrat_bold"
                android:textColor="@color/white"/>

            <EditText
                android:id="@+id/_et_profile_screen_email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Your Email Here"
                android:gravity="center"
                android:layout_marginTop="4dp"
                android:fontFamily="@font/montserrat"
                android:layout_marginBottom="4dp"
                android:padding="16dp"
                android:background="@drawable/bg_edit_text"/>

            <!--Phone-->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Phone"
                android:textSize="16sp"
                android:fontFamily="@font/montserrat_bold"
                android:textColor="@color/white"/>

            <EditText
                android:id="@+id/_et_profile_screen_phone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Your Phone Here"
                android:gravity="center"
                android:layout_marginTop="4dp"
                android:fontFamily="@font/montserrat"
                android:layout_marginBottom="4dp"
                android:padding="16dp"
                android:background="@drawable/bg_edit_text"/>

            <!--Gender-->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Gender"
                android:textSize="16sp"
                android:fontFamily="@font/montserrat_bold"
                android:textColor="@color/white"/>

            <EditText
                android:id="@+id/_et_profile_screen_gender"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Your Gender Here"
                android:gravity="center"
                android:layout_marginTop="4dp"
                android:fontFamily="@font/montserrat"
                android:layout_marginBottom="4dp"
                android:padding="16dp"
                android:background="@drawable/bg_edit_text"/>

            <!--Password-->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Password"
                android:textSize="16sp"
                android:fontFamily="@font/montserrat_bold"
                android:textColor="@color/white"/>

            <EditText
                android:id="@+id/_et_profile_screen_password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Password"
                android:inputType="textPassword"
                android:gravity="center"
                android:layout_marginTop="4dp"
                android:fontFamily="@font/montserrat"
                android:layout_marginBottom="4dp"
                android:padding="16dp"
                android:background="@drawable/bg_edit_text"/>

            <!--Password-->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Verify Password"
                android:textSize="16sp"
                android:fontFamily="@font/montserrat_bold"
                android:textColor="@color/white"/>

            <EditText
                android:id="@+id/_et_profile_screen_verify_password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Verify Password"
                android:inputType="textPassword"
                android:gravity="center"
                android:layout_marginTop="4dp"
                android:fontFamily="@font/montserrat"
                android:layout_marginBottom="4dp"
                android:padding="16dp"
                android:background="@drawable/bg_edit_text"/>

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/_btn_signup_screen_signup"
                android:layout_marginTop="8dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:fontFamily="@font/montserrat"
                android:padding="16dp"
                android:text="Update Information"
                android:background="@drawable/bg_button_ripple_effect"/>

        </LinearLayout>

    </LinearLayout>

</ScrollView>